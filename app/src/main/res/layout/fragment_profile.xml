<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/back"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="163dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/profile_image"
            android:id="@+id/avatar_image_view"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/name_edit_text" app:layout_constraintVertical_bias="0.132"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Имя"
            android:ems="10"
            android:id="@+id/name_edit_text"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColorHint="#FF9800" android:textColor="#141010"
            android:layout_marginBottom="280dp" app:layout_constraintBottom_toTopOf="@+id/sign_out_button"/>
    <TextView
            android:hint="yourmail@mail.ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_text_view"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="24sp"
            android:textColorHint="#FF9800" android:textColor="#000000" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/name_edit_text"/>
    <Button
            android:textStyle="bold|italic"
            android:text="Подтвердить почту"
            android:layout_width="256dp"
            android:layout_height="52dp"
            android:background="@drawable/button_color_fragments"
            android:id="@+id/email_confirm_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.495"
            android:textColor="#FF9800"
            android:textColorHint="#B3ADAD"
            style="@android:style/Widget.Button" android:textSize="18sp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/email_text_view" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/change_password_button"/>
    <Button
            android:textStyle="bold|italic"
            android:text="Поменять пароль"
            android:layout_width="256dp"
            android:layout_height="52dp"
            android:background="@drawable/button_color_fragments"
            android:id="@+id/change_password_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#FF9800"
            style="@android:style/Widget.Button"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginBottom="36dp" app:layout_constraintBottom_toTopOf="@+id/sign_out_button"
    />
    <Button
            android:textStyle="bold|italic"
            android:text="Выйти"
            android:layout_width="256dp"
            android:layout_height="52dp"
            android:background="@drawable/button_color_fragments"
            android:id="@+id/sign_out_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:textColor="#FF9800"
            style="@android:style/Widget.Button" android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>