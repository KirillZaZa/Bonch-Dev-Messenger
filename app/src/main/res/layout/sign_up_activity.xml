<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_reg"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="35dp"
            android:text="Регистрация"
            android:typeface="normal"
            android:textColor="#FF9800"
            android:fontFamily="@font/bahn"
            app:layout_constraintHorizontal_bias="0.517" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/email_sign_up_et"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Почта"
            android:textColorHint="#D0FF9800"
            android:ems="10"
            android:id="@+id/email_sign_up_et"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="312dp"
            app:layout_constraintBottom_toTopOf="@+id/complete_sign_up_button"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Логин"
            android:textColorHint="#99FF9800"
            android:ems="10"
            android:id="@+id/login_et"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/email_sign_up_et"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Пароль"
            android:textColorHint="#99FF9800"
            android:ems="10"
            android:id="@+id/password_sign_up_et"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/login_et"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Подтвердите пароль"
            android:textColorHint="#99FF9800"
            android:ems="10"
            android:id="@+id/password_confirm_et"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/password_sign_up_et"/>
    <Button
            android:text="Зарегестрироваться"
            android:layout_width="230dp"
            android:layout_height="46dp"
            android:id="@+id/complete_sign_up_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:background="@drawable/button_shape"
            android:textColor="#FF9800"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginBottom="84dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>